<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout">

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Nafn á ferðinni"
        android:id="@+id/trip_name"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:textSize="17sp"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/trip_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/trip_name"
            android:text="Upphafsdagur ferðar"
            android:id="@+id/trip_start"
            android:textColor="#000"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/trip_name"
            app:layout_constraintTop_toBottomOf="@+id/trip_start"
            android:text="Lokadagur ferðar"
            android:id="@+id/trip_end"
            android:textColor="#000"
            android:layout_marginLeft="30dp" />

    </LinearLayout>


</RelativeLayout>