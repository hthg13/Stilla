<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woman_standing_on_mountain_2569815"
    tools:context=".View.Activities.OptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_new_trip"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:background="#B3D29F0F"
            android:text="@string/add_new_trip"
            android:textColor="#FFFFFF"
            android:layout_marginTop="150dp" />

        <Button
            android:id="@+id/button_all_trips"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:background="#B3D29F0F"
            android:text="@string/vew_all_trips"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>